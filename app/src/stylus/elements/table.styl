.table
    width 100%
    border-collapse collapse
    border-spacing 0

    thead
        +mq(1024)
            display none
            height 1px
            opacity 0
            position absolute

    +element(th)
        color $grayTextColor
        font-family Roboto, sans-serif
        font-size 12px
        font-weight 600
        line-height 1.25
        letter-spacing 0.02em
        vertical-align top
        min-height 35px
        box-sizing border-box
        padding 0 15px 10px 15px
        text-align left
        border-bottom 1px solid $grayBorder

    +element(td)
        color $blackColor
        line-height 1.25
        font-size 12px
        text-align left
        box-sizing border-box
        font-family Roboto, sans-serif
        border-bottom 1px solid $grayBorder
        overflow hidden
        text-overflow ellipsis
        +mq(desktop)
            height 52px
            max-width 100px
            &:not(:nth-child(1))
                padding 10px 15px
            &:nth-child(1)
                padding 10px 15px 10px 12px
                transition border-color .15s ease
                will-change border-color
                border-left 3px solid transparent
        +mq(1024)
            text-align right
            display block
            padding 10px 15px 10px 80px
            clearfix()
            span
                text-align left
                display block
                float right
            &:before
                content attr(data-label)
                position absolute
                left 10px
                text-align left
                box-sizing border-box
                font-weight 500

        +modifier(hover-view)
            transition color .15s ease
            text-align right
            +mq(desktop)
                user-select none
                color rgba(0,0,0,0)
                width 1%
                white-space nowrap
            +mq(1024)
                width 100%
                border-bottom 0
            a
                color inherit
                text-decoration none


    +element(tr)
        transition background-color .15s ease
        will-change background-color

        &:not(.visible)
            pointer-events none
            clip rect(0,0,0,0)
            *
                clip rect(0,0,0,0)
                pointer-events none
        +mq(1024)
            border-top 1px solid $borderGrayColor
            &:nth-child(odd)
                background-color $tableHover
            & + &
                padding-top 10px
        .touch &
            .table
                +element(td)
                    +modifier(hover-view)
                        color $grayTextColor
                +element(icon)
                    transition-delay 0s
                    visibility visible
                    opacity 1
        +mq(desktop)
            &:hover
                background-color $tableHover
                .table
                    +element(td)
                        &:nth-child(1)
                            border-left-color $linkHover
                        +modifier(hover-view)
                            color $grayTextColor
                    +element(icon)
                        transition-delay 0s
                        visibility visible
                        opacity 1

    +element(link)
        color $linkColor
        transition color .15s ease
        will-change color
        text-decoration none
        &:hover
            color $linkHover

    +element(icon)
        color inherit
        font-size 20px
        visibility hidden
        cursor pointer
        opacity 0
        transition opacity .15s ease, visibility 0s ease .15s
        will-change opacity, visibility
        & + &
            margin-left 15px
        +mq(1024)
            opacity 1
            visibility visible